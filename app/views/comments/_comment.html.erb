<div class="m-auto comment" style="">
<p>
  <strong>User:</strong>
  <%= comment.user.email %>
</p>

<p>
  <strong>Text:</strong>
  <%= comment.body %>
</p>

<p>
  <%=
    link_to(
      "Delete",
      [comment.article, comment],
      method: :delete, data: {confirm: "Are you sure?"}
     )
  %>
</p>
</div>